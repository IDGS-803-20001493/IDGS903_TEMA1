
@{
    ViewBag.Title = "Calculos";
}

<h2>Calculos</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form action="/" method="post">
                <label>Numero 1</label>
                <input type="text" name="n1" value="" />
                <br />
                <label>Numero 2</label>
                <input type="text" name="n2" value="" />
                <br />
                <label>Sumar</label>
                <input type="radio" name="operacion" value="sumar" checked>
                <label>Restar</label>
                <input type="radio" name="operacion" value="restar">
                <label>Multiplicar</label>
                <input type="radio" name="operacion" value="multiplicar">
                <label>Dividir</label>
                <input type="radio" name="operacion" value="dividir">
                <br />
                <input type="submit" name="name" value="calcuar" />
            </form>
        </div>
        <div class="col-lg-6">
            <h1>
                El resultado es: @ViewBag.Res
            </h1>
            <h1>El  resultado es: @Html.DisplayFor(model => Model.Res) </h1>
        </div>
    </div>
</div>

