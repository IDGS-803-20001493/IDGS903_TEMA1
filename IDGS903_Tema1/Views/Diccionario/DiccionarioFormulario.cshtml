@model IDGS903_Tema1.Models.Diccionario

@{
    ViewBag.Title = "DiccionarioFormulario";
}

<h2>DiccionarioFormulario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Diccionario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Español, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Español, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Español, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group">
            @Html.LabelFor(model => model.Ingles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ingles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ingles, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>





    </div>
}



<hr />

@using (Html.BeginForm("DiccionarioFormulario", "Diccionario", FormMethod.Post))

{
     
    <div class="col-md-10" hidden>
        @Html.EditorFor(model => model.mostrar, new { htmlAttributes = new { @class = "form-control", Value = "1" } })

        @Html.ValidationMessageFor(model => model.mostrar, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Mostrar" class="btn btn-success" />
        </div>
    </div>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>Español</th>
                <th>English</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in ViewBag.DiccionarioCompleto)
                {
                    <tr>
                        @foreach (string datos in item.Split(','))
                        {
                            <td>
                                @datos
                            </td>
                        }
                    </tr>
                }
        </tbody>
    </table>

}

